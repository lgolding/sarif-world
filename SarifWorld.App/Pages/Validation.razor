@page "/validation"
@inject IStringLocalizer<Validation> Localizer

<div class="page-title" role="heading">
    @Localizer["PageTitle"]
</div>

<section class="content-section">
    <Alert @ref="Alert" />

    <DropZone OnFileDropped="@ValidateDroppedFile"
              AllowMultiple="false"
              DefaultLabel="@Localizer["DefaultLabel"]"
              BusyLabel="@Localizer["BusyLabel"]"
              CompleteLabel="@Localizer["CompleteLabel"]"
              CompleteLabelDisplayTime="5000" />

    <Multiselect @ref="RulesSelector" />
</section>
